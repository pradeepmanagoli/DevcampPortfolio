<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path %>
<% @portfolio_items.each do |portfolio_item| %>
	<p><%= link_to portfolio_item.title,portfolio_show_path(portfolio_item) %></p>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<%= image_tag portfolio_item.thum_image if !portfolio_item.thum_image.nil? %>
<%= link_to "Edit", edit_portfolio_path(portfolio_item.id) %>
<td><%= link_to 'Delete portofolio Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>

<% end %>
